---
import Layout from '../layouts/Layout.astro';
import HeaderSection from '../layouts/HeaderSection.astro';
import MainContentSection from '../layouts/MainContentSection.astro';
import TabsSection from '../components/Tabs-Section.astro';

const title = 'Celtic Guitar Sheet Music and Tabs';
const sectionClassName = 'tabs';
---

<Layout
  title='Anton Emery | Cetlic Guitar Tabs'
  description="Anton Emery's celtic guitar arrangements in tab and standard notation, with audio and video examples"
  ,
  keywords='celtic, guitar, acoustic, sheet musc, tabs'
>
  <HeaderSection
    sectionClassName={sectionClassName}
    imagePath='/src/assets/guitar-on-table.jpeg'
    altText='Acoustic guitar on a wooden table'
  />
  <MainContentSection title={title}>
    <TabsSection />
  </MainContentSection>
</Layout>
