---
import Layout from '../layouts/Layout.astro';
import HeaderSection from '../layouts/HeaderSection.astro';
import MainContentSection from '../layouts/MainContentSection.astro';
const title = 'Albums';
const sectionClassName = 'albums';
---

<Layout
  title='Anton Emery | Albums'
  description='The albums of Anton Emery, celtic fingestyle guitarist'
  keywords='celtic, guitar, acoustic, sheet musc, tabs'
>
  <HeaderSection
    sectionClassName={sectionClassName}
    title={title}
    imagePath='/src/assets/in-the-studio.jpeg'
    altText='Anton recording guitar in the studio'
  />
  <MainContentSection title={title} />
</Layout>
